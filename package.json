{
	"name": "wikipedia-roulette",
	"version": "0.1.0",
	"private": true,
	"dependencies": {
		"enzyme": "^3.11.0",
		"enzyme-adapter-react-16": "^1.15.2",
		"enzyme-to-json": "^3.4.4",
		"node-sass": "^4.14.1",
		"npm-run-all": "^4.1.5",
		"react": "^16.12.0",
		"react-dom": "^16.12.0",
		"react-redux": "^7.2.0",
		"react-scripts": "^3.4.1",
		"redux": "^4.0.5",
		"redux-thunk": "^2.3.0",
		"winston": "^3.2.1"
	},
	"devDependencies": {
		"auto-changelog": "^1.16.2",
		"eslint-config-airbnb": "^18.0.1",
		"eslint-config-prettier": "^6.7.0",
		"eslint-plugin-jsx-a11y": "^6.2.3",
		"eslint-plugin-prettier": "^3.1.1",
		"eslint-plugin-react": "^7.16.0",
		"flow-bin": "^0.112.0",
		"flow-typed": "^2.6.2",
		"husky": "^3.1.0",
		"lint-staged": "^9.5.0",
		"prettier": "^1.19.1"
	},
	"scripts": {
		"build": "react-scripts build",
		"eject": "react-scripts eject",
		"lint": "eslint --fix . && flow",
		"generate-vscode-debug": "node scripts/generate-vscode-debug",
		"start": "react-scripts start",
		"test": "react-scripts test --watchAll=false",
		"test-pre-commit": "react-scripts test --watchAll=false --findRelatedTests",
		"test-watch": "react-scripts test",
		"version": "auto-changelog -p && git add CHANGELOG.md"
	},
	"eslintConfig": {
		"extends": "react-app"
	},
	"jest": {
		"snapshotSerializers": [
			"enzyme-to-json/serializer"
		]
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.+(js|jsx)": [
			"eslint --fix",
			"npm run test-pre-commit",
			"git add"
		],
		"*.+(json|css|scss|md)": [
			"prettier --use-tabs --single-quote --write",
			"git add"
		]
	}
}
